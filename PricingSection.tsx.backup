// Pricing Card Component - Clean design without badges
function PricingCard({ plan, index, isMobile = false }: { plan: PricingPlan, index: number, isMobile?: boolean }) {
  const isEarlyBird = plan.isEarlyBird || false;
  
  return (
    <motion.div
      initial={{ opacity: 0, y: 15, scale: 0.98 }}
      whileInView={{ opacity: 1, y: 0, scale: 1 }}
      transition={{ duration: 0.5, delay: index * 0.1 }}
      viewport={{ once: true }}
      className={`relative ${plan.featured && !isMobile ? 'md:scale-105' : ''} ${isMobile ? 'mt-4' : 'mt-6'}`}
    >
      {/* Clean card design with subtle Early Bird styling */}
      <div className={`${
        isEarlyBird 
          ? 'bg-gradient-to-br from-amber-900/20 to-orange-900/20 border-amber-500/30' 
          : plan.featured 
          ? 'glass-panel-violet shadow-xl shadow-violet-500/20' 
          : 'glass-panel-dark shadow-lg'
      } rounded-xl ${isMobile ? 'p-5' : 'p-6'} relative overflow-hidden transition-all duration-300 border hover:scale-[1.02] flex flex-col justify-between min-h-full`}>
        {/* Subtle Background Glow */}
        <div className="absolute inset-0 opacity-0 hover:opacity-10 transition-opacity duration-300">
          {isEarlyBird ? (
            <div className="absolute top-3 right-3 w-8 h-8 bg-gradient-to-br from-amber-500 to-orange-500 rounded-full blur-lg"></div>
          ) : (
            <div className="absolute top-3 right-3 w-8 h-8 bg-gradient-to-br from-violet-500 to-violet-700 rounded-full blur-lg"></div>
          )}
        </div>

        <div className="relative z-10 flex flex-col h-full">
          {/* Plan Header */}
          <div className="text-center mb-5 flex-grow">
            <h3 className={`${isMobile ? 'text-lg' : 'text-xl'} font-bold text-white mb-2`}>{plan.name}</h3>
            <p className={`${isMobile ? 'text-xs' : 'text-sm'} text-white/60 mb-4`}>{plan.description}</p>
            
            {/* Price */}
            {/* Price */}
            <div className="mb-5">
              <div className="flex items-baseline justify-center">
                {/* Early Bird: Enhanced pricing with savings */}
                {isEarlyBird ? (
                  <div className="flex flex-col items-center">
                    {plan.originalPrice && (
                      <div className="flex items-center space-x-2 mb-2">
                        <div className="text-white/40 text-lg line-through">${plan.originalPrice}</div>
                        <div className="bg-red-500 text-white text-xs px-2 py-1 rounded-full font-bold">
                          90% OFF
                        </div>
                      </div>
                    )}
                    <div className="flex items-baseline">
                      <span className={`${isMobile ? 'text-2xl' : 'text-3xl'} font-bold text-amber-400`}>${plan.price}</span>
                      <span className="text-amber-300 ml-1 text-sm">lifetime</span>
                    </div>
                    <div className="text-amber-200/80 text-xs mt-1">Pay once, own forever</div>
                  </div>
                ) : (
                  <>
                    <span className={`${isMobile ? 'text-2xl' : 'text-3xl'} font-bold text-white`}>${plan.price}</span>
                    {plan.price !== 0 && (
                      <span className="text-white/50 ml-1 text-sm">/month</span>
                    )}
                  </>
                )}
              </div>
              {plan.price === 0 && (
                <p className="text-xs text-white/50 mt-1">Forever free</p>
              )}
            </div>            {/* CTA Button */}
            <Link
              to={isEarlyBird ? `/auth?mode=signup&plan=early-bird&early_bird=true` : `/auth?mode=signup&plan=${plan.name.toLowerCase()}`}
              className={`block w-full ${isMobile ? 'py-2 px-3' : 'py-2.5 px-4'} rounded-lg font-medium ${isMobile ? 'text-xs' : 'text-sm'} transition-all duration-200 text-center ${
                isEarlyBird
                  ? 'bg-amber-500 text-white hover:bg-amber-600'
                  : plan.featured
                  ? 'bg-gradient-to-r from-blue-500 to-purple-600 text-white hover:from-blue-600 hover:to-purple-700 shadow-lg hover:shadow-xl'
                  : 'bg-white text-gray-900 hover:bg-white/90 shadow-sm hover:shadow-md'
              }`}
            >
              {isEarlyBird ? 'Get Early Bird' : plan.price === 0 ? 'Start Free' : 'Get Started'}
            </Link>
          </div>

          {/* Features */}
          <div className="space-y-2.5 mt-auto">
            <h4 className={`font-semibold text-white mb-3 ${isMobile ? 'text-xs' : 'text-sm'}`}>What's included:</h4>
            {plan.features.map((feature: string, featureIndex: number) => (
              <div key={featureIndex} className="flex items-center space-x-2">
                <div className="w-4 h-4 bg-green-500/20 rounded-full flex items-center justify-center border border-green-500/30 flex-shrink-0">
                  <CheckCircle className="w-2.5 h-2.5 text-green-400" />
                </div>
                <span className={`${isMobile ? 'text-xs' : 'text-xs'} text-white/70 leading-tight`}>{feature}</span>
              </div>
            ))}
          </div>

          {/* Plan Limits */}
          {plan.limits && (
            <div className="mt-4 pt-4 border-t border-white/10">
              <div className={`${isMobile ? 'text-xs' : 'text-xs'} text-white/50`}>
                <div className="flex items-center justify-between mb-1">
                  <span>Modules per month:</span>
                  <span className="font-medium text-white/80">{plan.limits.modules}</span>
                </div>
                <div className="flex items-center justify-between">
                  <span>Stores:</span>
                  <span className="font-medium text-white/80">{plan.limits.stores}</span>
                </div>
              </div>
            </div>
          )}
        </div>
      </div>
    </motion.div>
  );
}